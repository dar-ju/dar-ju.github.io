{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": false,
    "jsx": "preserve",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowJs": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": ["vue"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.js",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
